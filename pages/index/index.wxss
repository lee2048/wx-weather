.search {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  width: 100%;
  height: 2rem;
  background-color: #fff;
  box-shadow: 0 4px 6px rgba(0, 0, 0, .2);
}
.search .section {
  width: 50%;
}
.search .section input{
  height: 100%;
  margin-left: 20px;
  color: #999;
}
input::-webkit-input-placeholder{
  color: #fff;
}
.search .button-wrapper{
  width: 26%;
}
.search .button-wrapper button{
  line-height: 2;
  height: 100%;
  border-radius: 1px;
  color: #999;
  background-color: rgba(0, 0, 0, 0);
}
.search .button-wrapper button.clickIt{
  background-color: rgba(0, 0, 0, .4);
  color: #fff;
}
.search .button-wrapper button::after{
  border: 0;
}
.weathesInfo{
  box-sizing: border-box;
  width: 98%;
  padding: 14px;
  margin: 1rem auto;
  margin-bottom: 0;
  border-radius: 4px;
  opacity: 0;
  transform: translateY(100px);
  box-shadow: 1px 2px 3px rgba(0, 0, 0, .1);
  background-color: #fff;
}
.weathesInfo .location{
  font-size: .7rem;
}
.weathesInfo .temp{
  flex-direction: column;
  margin: 16px 0;
}
.weathesInfo .temp text{
  margin: 2px 0;
}
.weathesInfo .temp text.weath{
    font-size: 1.4rem;
}
.weathesInfo .otherInfo{
  width: 70%;
  justify-content: space-between;
}
.weathesInfo .otherInfo .humidity, .wind, .aqi{
  flex-direction: column;
}
.weatherDetailsInfo{
  justify-content: space-between;
}
.weatherDetailsInfo text{
  margin: 8px 0;
}
.quality{
  width: 3rem;
  height: 3rem;
  margin: 10px auto;
  font-size: .86rem;
  text-align: center;
  line-height: 3rem;
  color: #00E676;
  border-radius: 100%;
  border: 1px solid #00E676;
}
.someVal{
  font-size: .66rem;
  justify-content: space-between;
}
.advice{
  font-size: .7rem;
  color: #00E676;
  text-align: center;
  margin: 8px 0;
}
.detailed{
  justify-content: space-between;
}
.detailed .unit{
  font-size: .6rem;
  color: #999;
}
.left_box, .right_box{
  width: 46%;
  flex-direction: column;
}
.single{
  justify-content: space-between;
  margin: 4px;
}